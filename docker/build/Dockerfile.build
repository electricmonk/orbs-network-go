FROM golang:1.12.9

WORKDIR /src

RUN apt update ; apt-get install apt-transport-https ca-certificates -y ; update-ca-certificates

RUN apt-get install -y git bash libc6-dev

ADD ./go.* /src/

RUN go mod download

ADD . /src

RUN env

RUN go env

ARG SKIP_DEVTOOLS

ARG GIT_COMMIT

ARG BUILD_FLAG

ARG BUILD_CMD

ARG SEMVER

RUN $BUILD_CMD
